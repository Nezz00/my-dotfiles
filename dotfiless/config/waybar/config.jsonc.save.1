
{
  "layer": "top",
  "position": "top",
  "modules-left": ["clock", "tray"],

  "modules-center": ["hyprland/workspaces", "mpd"],
  "modules-right": ["network", "pulseaudio", "battery", "custom/power", "custom/launcher"],

  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "format-icons": { 
      "active": "",
      "default": ""   
    },
    "persistent-workspaces": {
      "eDP-1": [1, 2, 3, 4, 5]
    }
  },

  "custom/launcher": {
    "format": " ",
    "on-click": "wofi"
  },

  "clock": {
    "timezone": "America/Argentina/Buenos_Aires",
    "format": "  {:%A | %H:%M}",
    "tooltip-format": "{:%Y-%m-%d %H:%M:%S}",
    "interval": 60
  },

  "bluetooth": {
    "on-click": "blueman-manager",
    "format-disabled": "󰂲",
    "format-enabled": "󰂰"   
 
  },

  "network": {
    "format-wifi": "  ({signalStrength}%) {bandwidthDownBits} {bandwidthUpBytes}",
    "format-ethernet": "󰈀  {ifname}",
    "format-disconnected": "󰖪  Desconectado",
    "on-click": "nm-connection-editor",
    "interval": 10

  }, 

  "pulseaudio": {
    "format": "  {volume}%",
    "format-muted": "󰝟 ",
    "on-click": "pavucontrol"
  },
 
  "battery": {
    "format": "{capacity}% ",
    "format-charging": "{capacity}% 󰂄",
    "format-plugged": "{capacity}% 󰂄",
    "format-alt": "{time} " 
  },     

  "custom/power": {
    "format": "⏻",
    "on-click": "wlogout",
    "tooltip": "Power Options"
  },
    
   "mpd": {
    "format": "{stateIcon} {title} ({artist})",
    "format-paused": "⏸ {title} ({artist})",
    "format-stopped": "Stopped",
    "stateIcons": {
        "playing": "▶",
        "paused": "⏸",
        "stopped": "⏹"
    },
    "on-click": "rmpc stop",
    "on-click-right": "rmpc next",
    "on-click-middle": "rmpc prev",
    "interval": 1
 }
}
